<h1>Articles</h1>

<ul id="articles">
<% @articles.each do |article| %>
  <li>
  <%= link_to article.title, article_path(article), id: "article_#{article.id}"%><br/>
  <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Realy delete article?"} %>
  <%= link_to "Edit", edit_article_path(article)  %>
  </li>
  <% end %>
</ul>

<%= link_to "Create New Article", new_article_path, class: "new_article" %>
