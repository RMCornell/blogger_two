<%= form_for(@article, html: {multipart: true}) do |f| %>
  <p>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :body %>
  <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :image, "Attach an Image" %><br/>
    <%= f.file_field :image %>
  <p>
  <%=f.submit %>
  <% end %>
  </p>

